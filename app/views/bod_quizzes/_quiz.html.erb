      </div> <!-- opaque container -->

      <div class="container col-xs-10 col-xs-push-1 quiz-question">
        <div class="form-group">
          <h3>Q7: Longest Finger Length</h3>
          <%= f.select :longest_finger, options_for_select([['2.0 Inches', '2.0'],['2.25 Inches', '2.25'],['2.50 Inches', '2.50'],['2.75 Inches', '2.75'],['3.0 Inches', '3.0'],['3.25 Inches', '3.25'],['3.5 Inches', '3.5'],['3.75 Inches', '3.75'],['4.0 Inches', '4.0']]), {}, {class: "form-control"} %>
