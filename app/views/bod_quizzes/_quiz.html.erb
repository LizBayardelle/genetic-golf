      </div> <!-- opaque container -->
    </div> <!-- column end -->
  </div> <!-- row end -->

  <div class="row text-center">
    <%= f.submit "Submit Answers", class: "btn-custom" %>
  </div> <!-- row end -->

  <div class="buffer-25"></div>

<% end %>
