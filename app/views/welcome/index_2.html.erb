<div class="hero-image-row-index">
  <div class="hero-image-outer-index text-center">
    <div class="hero-image-inner-index text-center">
      <%= image_tag 'Background 1.jpg', id: "hero-image-index", class: "hero-image",alt: "Beautiful Sunset over Pelican Hills Golf Course and Ocean Cliffs" %>
    </div> <!-- hero-image-inner -->
  </div> <!-- hero-image-inner -->
</div> <!-- row -->

<div class="overlap-hero-image-index">
  <div class="slide text-center" id="slide-1">
    <h1 class="slideRightSlider" style="visibility: hidden; margin: 75px 0 40px 0; font-size: 52px; color: black; font-weight: bolder">Genetic Golf</h1>
    <h2 class="slideRightSlider" style="visibility: hidden; color: black">We&nbsp;don't&nbsp;guess, weÂ test to find what works best&nbsp;for&nbsp;you!</h2>
  </div> <!-- slide 1 -->

  <div class="slide text-center" id="slide-2" style="display: none; border-bottom: thick #567e3a solid">
    <h2 class="slideRightSlider" style="color: black; margin-top: 50px; margin-bottom: 50px">The greatest golfers of all time have different swings.<br>None of them have the perfect swing!</h2>
    <%= image_tag 'ss01.jpg', class: "fadeIn", style: "visibility: hidden" %>
    <%= image_tag 'ss02.jpg', class: "fadeIn", style: "visibility: hidden" %>
    <%= image_tag 'ss03.jpg', class: "fadeIn", style: "visibility: hidden" %>
  </div> <!-- slide 2 -->




<script>
  setTimeout(function() {
    $("#slide-1").fadeOut().empty();
  }, 4000);
  setTimeout(function() {
    $("#hero-image").fadeOut().empty();
  }, 4000);
  $('#slide-2').delay(4000).fadeIn(4000);
</script>



</div> <!-- overlap hero image -->

<div class="container" style="margin-top: 20px">
  <%= link_to new_per_quiz_path, class: "no-hvr-underline col-sm-4 hvr-overline-from-center", style: "color: black !important" do %>
    <div class="text-center">
      <h1><strong>Step 1</strong></h1>
      <h2>Test Your<br>Personality</h2>
      <div class="index-step-icon-row">
        <%= image_tag 'icon_yourid.png', class: "hvr-pulse-grow index-step-icon", alt: "Image of Hands Inside a Lightbulb" %>
      </div> <!-- image row -->
      <p style="height: 120px">Your personality has a direct effect on how you learn and perform best, your mental processes, and how you can play your best golf.</p>
    </div> <!-- third step column -->
  <% end %>

  <div class="row visible-xs">
    <hr class="col-xs-6 col-xs-push-3">
  </div> <!-- hr row -->

  <%= link_to welcome_body_path, class: "no-hvr-underline col-sm-4 hvr-overline-from-center", style: "color: black !important" do %>
    <div class="text-center">
      <h1><strong>Step 2</strong></h1>
      <h2>Know<br>Your Body</h2>
      <div class="index-step-icon-row">
        <%= image_tag 'icon_dynamics.png', class: "hvr-pulse-grow index-step-icon", alt: "Image of the Outline Image of a Body Being Examined" %>
      </div> <!-- image row -->
      <p style="height: 120px">Until you understand your body, how will you know which golf tips will work for you? Test your body now and optimize your game.</p>
    </div> <!-- third step column -->
  <% end %>

  <div class="row visible-xs">
    <hr class="col-xs-6 col-xs-push-3">
  </div> <!-- hr row -->

  <%= link_to new_swing_book_path, class: "no-hvr-underline col-sm-4 hvr-overline-from-center", style: "color: black !important" do %>
    <div class="text-center">
      <h1><strong>Step 3</strong></h1>
      <h2>Find<br>Your Swing</h2>
      <div class="index-step-icon-row">
        <%= image_tag 'icon_TEMP_yourcode.jpg', class: "hvr-pulse-grow index-step-icon", alt: "Image of Three Diffferent Golf Swings of Pro Golfers" %>
      </div> <!-- image row -->
      <p style="height: 120px">There is no one swing that works for everyone. Run the genetic tests to discover the swing that brings out your best game.</p>
    </div> <!-- third step column -->
  <% end %>
</div> <!-- steps container -->
