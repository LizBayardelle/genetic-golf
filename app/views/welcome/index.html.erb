<script>
$( document ).ready(function() {
    var heights = $(".teaser-well").map(function() {
        return $(this).height();
    }).get(),

    maxHeight = Math.max.apply(null, heights);

    $(".teaser-well").height(maxHeight);

    window.onresize = function(){ location.reload(); }
});
</script>

