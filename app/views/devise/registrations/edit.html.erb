<div class="container">
  <div id="locker_edit" class="text-center">
    <h1><%= @user.first_name %>'s Locker<br>
    <small>Edit My Information</small></h1>
  </div>


<%= simple_form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-sm-6">
        <div class="well">
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true, autofocus: true %>
          <%= f.input :email, required: true, autofocus: true %>
          <div class="form-group">
            <%= f.label :birthday %>
            <%= f.date_field :birthday %>
          </div> <!-- form group -->
          <div class="form-group">
            <%= f.label :gender %><br>
            <div class="radio">
              <%= f.radio_button :gender, 'Male'%><label>Male</label><br>
              <%= f.radio_button :gender, 'Female'%><label>Female</label>
            </div> <!-- radio -->
          </div> <!-- form group -->
          <div class="form-group">
            <%= f.label "Dominant Hand" %><br>
            <div class="radio">
              <%= f.radio_button :dom_hand, 'Right'%><label>Right Handed</label><br>
              <%= f.radio_button :dom_hand, 'Left'%><label>Left Handed</label><br>
              <%= f.radio_button :dom_hand, 'Ambidextrous'%><label>Ambidextrous</label>
            </div> <!-- radio -->
          </div> <!-- form group -->
          <div class="form-group">
            <%= f.label "Best Sport (Other Than Golf)" %>
            <%= f.select :sport, options_for_select([['None', 'None'],['Baseball', 'Baseball'],['Basketball', 'Basketball'],['Football', 'Football'],['Soccer', 'Soccer'],['Hockey', 'Hockey'],['Tennis', 'Tennis'],['Lacrosse', 'Lacrosse'],['Volleyball', 'Volleyball'],['Cricket', 'Cricket'],['Track and Field', 'Track and Field'],['Water Sports', 'Water Sports'],['Snow Sports', 'Snow Sports'],['Dance', 'Dance'],['Auto Racing', 'Auto Racing'],['Other Sport', 'Other']]), {}, {class: "form-control"} %>
          </div> <!-- form group -->
        </div> <!-- well -->
      </div> <!-- col-sm-6 -->

    <div class="col-sm-6">
      <div class="well">
        <div class="form-group">
          <%= f.label "Number of Years Golfing" %>
          <%= f.text_field :g_years, class: 'form-control', placeholder: "Please type a number" %>
        </div> <!-- form group -->
        <div class="form-group">
          <%= f.label "Average Golf Score" %>
          <%= f.text_field :g_score, class: 'form-control', placeholder: "Please type a number" %>
        </div> <!-- form group -->
        <div class="form-group">
          <%= f.label "Average Number of Golf Rounds per Month" %>
          <%= f.text_field :g_rounds, class: 'form-control', placeholder: "Please type a number" %>
        </div> <!-- form group -->
        <div class="form-group">
          <%= f.label "Average Number of Golf Practices" %>
          <%= f.text_field :g_practice, class: 'form-control', placeholder: "Please type a number" %>
        </div> <!-- form group -->
        <div class="form-group">
          <%= f.label "Currrent Index or Handicap" %>
          <%= f.text_field :handicap, class: 'form-control', placeholder: "Please type a number" %>
        </div> <!-- form group -->
      </div> <!-- well -->
    </div> <!-- col-sm-6 -->
  </div> <!-- row -->

    <div class="buffer-25"></div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

  <div class="well">
    <%= f.input :password, autocomplete: "off", hint: "(Leave this blank if you don't want to change it.)", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "(Please confirm your current password to make your changes.)", required: true %>
  </div> <!-- well -->
</div> <!-- form inputs -->

  <div class="form-actions text-center">
    <%= f.button :submit, "Update", class: "btn-custom" %>
  </div> <!-- form actions -->
<% end %>

<div class="text-center">
  <h3>Cancel My Account</h3>
  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
