            <%= f.radio_button :bal06, '2'%><label>26 - 30 Seconds</label><br>
            <%= f.radio_button :bal06, '1'%><label>31 Seconds or More</label>
          </div>
        </div>
      </div> <!-- opaque container -->

    </div> <!-- column end -->
  </div> <!-- row end -->

  <div class="row">
    <div class="text-center"><%= f.submit "Submit Answers", class: "btn-custom", style: "margin-bottom: 50px" %></div>
  </div> <!-- row end -->
<% end %>
