        <%= current_user.swing_book.swing04 %>
        <%= current_user.swing_book.swing05 %>
        <%= current_user.swing_book.swing06 %>
        -
        <%= current_user.swing_book.swing07 %>
        <%= current_user.swing_book.swing08 %>
        <%= current_user.swing_book.swing09 %>
