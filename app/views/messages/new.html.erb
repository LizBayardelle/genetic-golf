<div class="container">

<div class="text-center page-title-bar">
  <h1>Contact Us</h1>
  <h2><small>If you have any questions or need any help feel free to email us at <a href="mailto:admin@geneticgolf.com">admin@geneticgolf.com</a> or fill out the contact us form below. Either way, we'll get back to you shortly.</small></h2>
</div>

<%= form_for @message do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@message.errors.count, "error")} prohibited this message from being sent:" %>
      </h2>

      <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit 'Send', class: 'button btn btn-secondary' %>
  </div>
<% end %>

</div> <!-- page container -->
